{
    "title": "Space bar doubles as control key",
    "parameters": {
        "basic.to_if_alone_timeout_milliseconds": 150
    },
    "rules": [{
        "description": "Change spacebar to left_control if pressed with other keys (Post spacebar when pressed alone)",
        "manipulators": [{
            "from": {
                "key_code": "spacebar",
                "modifiers": {
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [{
                "key_code": "left_control"
            }],
            "to_if_alone": [{
                "key_code": "spacebar"
            }],
            "type": "basic"
        }]
    }]
}
