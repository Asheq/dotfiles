{
  "title": "Space doubles as Ctrl",
  "rules": [
    {
      "description": "Change Space to Ctrl if held down with other keys",
      "manipulators": [
        {
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "parameters": {
              "basic.to_if_alone_timeout_milliseconds": 500
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
