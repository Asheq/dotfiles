# ------------------------------------------------------------------------------
# Specify preferred programs
# ------------------------------------------------------------------------------
export PAGER=less
export MANPAGER='nvim -c "set ft=man" -'
export EDITOR=nvim
export VISUAL="$EDITOR"

# ------------------------------------------------------------------------------
# Configure nvm
# ------------------------------------------------------------------------------
export INITIAL_NODE_VERSION=8.12.0
export NVM_DIR=~/.nvm

# ------------------------------------------------------------------------------
# Configure fzf
# ------------------------------------------------------------------------------
export FZF_DEFAULT_COMMAND='all_git_branches_normalized'
export FZF_CTRL_T_COMMAND="${FZF_DEFAULT_COMMAND}"

# ------------------------------------------------------------------------------
# Configure grep
# ------------------------------------------------------------------------------
export GREP_OPTIONS='--color=auto'

# ------------------------------------------------------------------------------
# Set PATH
# ------------------------------------------------------------------------------

# Add user binaries
pathprepend ~/bin PATH

# Add cargo binaries
pathprepend ~/.cargo/bin PATH

# Add Android SDK binaries
export ANDROID_HOME="$HOME"/Library/Android/sdk
pathprepend "$ANDROID_HOME"/emulator PATH # Android emulator
pathprepend "$ANDROID_HOME"/tools PATH # ???
pathprepend "$ANDROID_HOME"/tools/bin PATH # Android SDK tools
pathprepend "$ANDROID_HOME"/platform-tools PATH # Android SDK platform tools

# Add node binaries for nvm's initial node
pathprepend ~/.nvm/versions/node/v"$INITIAL_NODE_VERSION"/bin PATH

# Add rvm binaries
pathprepend ~/.rvm/bin PATH

# Ensure current directory is not in PATH
pathremove . PATH
pathremove "" PATH
